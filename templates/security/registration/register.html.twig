{% extends 'base.html.twig' %}

{% block body %}
    <div class="main-content">
        <div class="bg-white p-4 container">
            <h3>S'inscrire</h3>

            {{ form_start(registrationForm) }}
            {{ form_widget(registrationForm, {'attr': {'class': 'row'}}) }}
            <button class="mt-3 btn btn-primary">{{ button_label|default("S'inscrire") }}</button>
            {{ form_end(registrationForm) }}

            <div class="text-center mt-3">
                <span>Déjà un compte ?</span>
                <a class="link" href="{{ path('login') }}">Se connecter</a>
            </div>
        </div>
    </div>
{% endblock %}
